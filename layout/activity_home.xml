<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".jaga">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:text="@string/menjaga_diri"
    android:gravity="center_horizontal" />
   <Button
       android:id="@+id/buttonheart"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:background="@drawable/hati1" />
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAlignment="center"
       android:text="@string/rajin_cuci_tangan"
       android:gravity="center_horizontal" />
   <Button
       android:id="@+id/buttonhand"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:background="@drawable/tangan" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/selalu_pakai_masker"
        android:gravity="center_horizontal" />
    <Button
        android:id="@+id/buttonmask"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/mask1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/menerapkan_pola_hidup_sehat"
        android:gravity="center_horizontal" />
    <Button
        android:id="@+id/buttonfruit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/fruit" />
</LinearLayout>
</ScrollView>